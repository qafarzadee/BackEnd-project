@model IEnumerable<AboutWelcome>

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>about us</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- About Start -->
<div class="about-area pt-145 pb-155">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                
            <div class="col-md-6 col-sm-6">
                <div class="about-content">
                    <h2>@item.Tittle</h2>
                    <p>@item.Description</p>
                    <a class="default-btn" asp-controller="course" asp-action="index" >view courses</a>
                </div>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="about-img">
                    <img src="~/Assets/img/@item.Image" alt="about">
                </div>
            </div>
            }
        </div>
    </div>
</div>
<!-- About End -->
<!-- Teacher Start -->
<div class="teacher-area pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section-title text-center">
                    <img src="~/Assets/img/icon/section.png" alt="title">
                    <h2>meet our teachers</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in ViewBag.Teachers)
            {
                <a asp-controller="teacher" asp-action="detail" asp-route-id="@item.Id">
                  <div class="col-md-3 col-sm-4 col-xs-12">
                <div class="single-teacher">
                    <div class="single-teacher-img">
                               <a asp-controller="teacher" asp-action="detail" asp-route-id="@item.Id" style="display:flex;justify-content:center;align-items:center;"><img src="~/Assets/img/@item.Image" alt="teacher" style="height:180px;"></a>
                            </div>
                    <div class="single-teacher-content text-center">
                                <h2><a asp-controller="teacher" asp-action="detail" asp-route-id="@item.Id">@item.Name</a></h2>
                        <ul>
                            <li><a href="@item.InstagramLink"><i class="zmdi zmdi-facebook"></i></a></li>
                            <li><a href="@item.InstagramLink"><i class="zmdi zmdi-pinterest"></i></a></li>
                            <li><a href="@item.InstagramLink"><i class="zmdi zmdi-vimeo"></i></a></li>
                            <li><a href="@item.InstagramLink"><i class="zmdi zmdi-twitter"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
                </a>       
            }
          
        </div>
    </div>
</div>
<!-- Teacher End -->
<!-- Testimonial Area Start -->
<div class="testimonial-area pt-110 pb-105 text-center">
    <div class="container">
        <div class="row">
            <div class="testimonial-owl owl-theme owl-carousel">
                <div class="col-md-8 col-md-offset-2 col-sm-12">
                    <div class="single-testimonial">
                        @foreach (var item in ViewBag.ExtraInfos)
                        {
                        <div class="testimonial-info">
                            <div class="testimonial-img" style="width:200px;">
                                <img src="~/Assets/img/@item.Image" alt="testimonial" >
                            </div>
                            <div class="testimonial-content">
                                    <p>@item.Description</p>
                                <h4>@item.Name</h4>
                                    <h5>@item.Position</h5>
                            </div>
                        </div>
                        
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Testimonial Area End -->
<!-- Notice Start -->
<section class="notice-area two pt-140 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-right-wrapper mb-25 pb-25">
                    @foreach (var item in ViewBag.Videos)
                    {
                      <div class="notice-video">
                                <div class="video-icon video-hover">
                                    <a class="video-popup" href="@item.Link">
                                        <i class="zmdi zmdi-play"></i>
                                    </a>
                                </div>
                            </div>
                    }
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="notice-left-wrapper">
                    <h3>notice board</h3>
                    <div class="notice-left">
                        @foreach (var item in ViewBag.NoticeBoards)
                        {
                        <div class="single-notice-left mb-23 pb-20">
                            <h4>@item.CreatedDate</h4>
                                <p>@item.Description</p>
                        </div>
                            
                        }
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Notice End -->
<!-- Subscribe Start -->
