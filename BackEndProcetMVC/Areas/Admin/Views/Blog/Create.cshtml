<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

@model Blog

<form method="post" style="margin:10px;" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Tittle</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="tittle.." asp-for="@Model.Tittle">
        <span class="alert alert-text" asp-validation-for="@Model.Tittle" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Description</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="description.." asp-for="@Model.Description">
        <span class="alert alert-text" asp-validation-for="@Model.Description" style="color:red; font-size:16px;"></span>
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Owner</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="owner.." asp-for="@Model.Owner">
        <span class="alert alert-text" asp-validation-for="@Model.Owner" style="color:red; font-size:16px;"></span>
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Image</label>
        <input class="form-control" type="file" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="fromfile.." asp-for="@Model.formFile">
        <span class="alert alert-text" asp-validation-for="@Model.formFile" style="color:red; font-size:16px;"></span>
    </div>



    <div class="mb-3">
        <select multiple asp-for="TagIds" class="form-select form-select-sm" aria-label=".form-select-sm example">
            <option selected>Choose Positions</option>
            @foreach (var item in ViewBag.Tags)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

