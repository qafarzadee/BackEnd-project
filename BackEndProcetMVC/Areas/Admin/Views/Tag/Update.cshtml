@model Tag

<form method="post" asp-controller="tag" asp-action="update" style="margin:10px;">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="@Model.Name">
        <span class="alert alert-text" asp-validation-for="@Model.Name" style="color:red; font-size:16px;"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>