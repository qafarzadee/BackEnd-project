<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

@model Course

<form method="post" style="margin:10px;" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Tittle</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="tittle.." asp-for="@Model.Title">
        <span class="alert alert-text" asp-validation-for="@Model.Title" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Description</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="description.." asp-for="@Model.Description">
        <span class="alert alert-text" asp-validation-for="@Model.Description" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">About</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="about.." asp-for="@Model.About">
        <span class="alert alert-text" asp-validation-for="@Model.About" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Apply</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="apply.." asp-for="@Model.Apply">
        <span class="alert alert-text" asp-validation-for="@Model.Apply" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Certification</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="certification.." asp-for="@Model.Certification">
        <span class="alert alert-text" asp-validation-for="@Model.Certification" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">duration</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="duration.." asp-for="@Model.Duration">
        <span class="alert alert-text" asp-validation-for="@Model.Duration" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Class Duration</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="class duration.." asp-for="@Model.ClassDuration">
        <span class="alert alert-text" asp-validation-for="@Model.ClassDuration" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Skil level</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="skil level.." asp-for="@Model.SkillLevel">
        <span class="alert alert-text" asp-validation-for="@Model.SkillLevel" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Student Count</label>
        <input  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="student count.." asp-for="@Model.StudentCount">
        <span class="alert alert-text" asp-validation-for="@Model.StudentCount" style="color:red; font-size:16px;"></span>
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Price</label>
        <input  class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="price.." asp-for="@Model.Price">
        <span class="alert alert-text" asp-validation-for="@Model.StudentCount" style="color:red; font-size:16px;"></span>
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Image</label>
        <input class="form-control" type="file" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="fromfile.." asp-for="@Model.formFile">
        <span class="alert alert-text" asp-validation-for="@Model.formFile" style="color:red; font-size:16px;"></span>
    </div>



    <div class="mb-3">
        <select multiple asp-for="TagIds" class="form-select form-select-sm" aria-label=".form-select-sm example">
            <option selected>Choose Positions</option>
            @foreach (var item in ViewBag.Tags)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

